<div class="container">
  <h1><%= "Restaurants" %></h1>
  <ul class= "list-group">
    <% @restaurants.each do |restaurant| %>
      <li>
        <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
      </li>
    <% end %>
  </ul>
  <div id="add">
    <%= link_to new_restaurant_path do %>
      <i class="fa-solid fa-plus"></i> Add a new restaurant
    <% end %>
  </div>

</div>
